<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".MainActivity"
android:gravity="center">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_marginBottom="30dp"
            android:justificationMode="inter_word"
            android:text="Truuuuco Cachorreira"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="Jogador 1:"
                android:gravity="center"
                android:id="@+id/j1_label"
        android:layout_gravity="center">
        </TextView>
        <TextView
                android:layout_width="match_parent"
                android:id="@+id/j1_text"
                android:gravity="center"
                android:text="0 Pontos"
                android:layout_height="match_parent">
        </TextView>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center">
        <Button
                android:layout_width="70dp"
                android:layout_margin="5dp"
                android:id="@+id/j1_1"
                android:onClick="onAcrecentarJ1"
                android:layout_height="match_parent"
                android:text="+1"/>
        <Button
                android:layout_width="70dp"
                android:text="+3"
                android:id="@+id/j1_3"
                android:onClick="onAcrecentarJ1"
                android:layout_margin="5dp"
                android:layout_height="match_parent"/>
        <Button
                android:layout_width="70dp"
                android:layout_margin="5dp"
                android:text="+6"
                android:id="@+id/j1_6"
                android:onClick="onAcrecentarJ1"
                android:layout_height="match_parent"/>
        <Button
                android:layout_width="70dp"
                android:layout_margin="5dp"
                android:text="+9"
                android:onClick="onAcrecentarJ1"
                android:id="@+id/j1_9"
                android:layout_height="match_parent"/>
        <Button
            android:layout_width="70dp"
                android:layout_margin="5dp"
                android:text="+12"
                android:onClick="onAcrecentarJ1"
                android:id="@+id/j1_12"
                android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:text="Jogador 2:"
                android:gravity="center"
                android:id="@+id/j2_label"
                android:layout_gravity="center">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/j2_text"
            android:gravity="center"
            android:text="0 Pontos"
            android:layout_height="match_parent">
        </TextView>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
        android:layout_marginTop="10dp"
            android:gravity="center">
        <Button
                android:layout_width="70dp"
                android:layout_margin="5dp"
                android:id="@+id/j2_1"
                android:onClick="onAcrecentarJ2"
                android:layout_height="match_parent"
                android:text="+1"/>
        <Button
            android:layout_width="70dp"
                android:text="+3"
                android:onClick="onAcrecentarJ2"
                android:id="@+id/j2_3"
                android:layout_margin="5dp"
                android:layout_height="match_parent"/>
        <Button
            android:layout_width="70dp"
                android:layout_margin="5dp"
                android:onClick="onAcrecentarJ2"
                android:text="+6"
                android:id="@+id/j2_6"
                android:layout_height="match_parent"/>
        <Button
            android:layout_width="70dp"
                android:layout_margin="5dp"
                android:text="+9"
                android:onClick="onAcrecentarJ2"
                android:id="@+id/j2_9"
                android:layout_height="match_parent"/>
        <Button
                android:layout_width="70dp"
                android:layout_margin="5dp"
                android:text="+12"
                android:onClick="onAcrecentarJ2"
                android:id="@+id/j2_12"
                android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center">

        <Button
                android:layout_width="120dp"
                android:layout_margin="5dp"
                android:text="HistÃ³rico"
                android:onClick="onHistorico"
                android:id="@+id/historico"
                android:layout_height="match_parent"/>
        <Button
                android:layout_width="120dp"
                android:layout_margin="5dp"
                android:text="Limpar"
                android:onClick="onZerar"
                android:id="@+id/limpar"
                android:layout_height="match_parent"/>

        </LinearLayout>


</LinearLayout>